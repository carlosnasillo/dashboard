# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                                               controllers.Application.index

POST    /api/authenticate                                               controllers.Login.authentication

GET     /api/analytics/lendingClub                                      controllers.Analytics.lendingClubAnalytics

GET     /api/portfolio/analytics                                        controllers.Portfolio.allPortfolioAnalytics
GET     /api/portfolio/analytics/lendingClub                            controllers.Portfolio.LCportfolioAnalytics
GET     /api/portfolio/analytics/notesAcquiredTodayByGrade              controllers.Portfolio.notesAcquiredTodayByGrade
GET     /api/portfolio/analytics/notesAcquiredTodayByYield              controllers.Portfolio.notesAcquiredTodayByYield
GET     /api/portfolio/analytics/notesAcquiredTodayByPurpose            controllers.Portfolio.notesAcquiredTodayByPurpose
GET     /api/portfolio/analytics/notesAcquiredThisYearByMonthByGrade    controllers.Portfolio.notesAcquiredThisYearByMonthByGrade
GET     /api/portfolio/analytics/notesAcquiredThisYearByMonthByYield    controllers.Portfolio.notesAcquiredThisYearByMonthByYield
GET     /api/portfolio/analytics/notesAcquiredThisYearByMonthByPurpose  controllers.Portfolio.notesAcquiredThisYearByMonthByPurpose
GET     /api/portfolio/lendingClub/currentBalance                       controllers.Portfolio.currentBalance
GET     /api/portfolio/currentBalance                                   controllers.Portfolio.totalCurrentBalance

GET     /api/loans                                                      controllers.Loans.availableLoans
POST    /api/placeOrder                                                 controllers.Loans.submitOrder
GET     /api/ownedNotes/:investorId                                     controllers.Loans.ownedNotes(investorId)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                                                   controllers.Assets.versioned(path="/public", file: Asset)
