# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                                       controllers.Application.index

POST    /api/authenticate                                       controllers.Login.authentification

GET     /api/analytics/lendingClub/numLoans                     controllers.Dashboard.lendingClubAnalyticsNumLoans
GET     /api/analytics/lendingClub/liquidity                    controllers.Dashboard.lendingClubAnalyticsLiquidity
GET     /api/analytics/lendingClub/liquidityByGrade             controllers.Dashboard.lendingClubAnalyticsLiquidityByGrade
GET     /api/analytics/lendingClub/dailyChangeInNumLoans        controllers.Dashboard.lendingClubAnalyticsDailyChangeInNumLoans
GET     /api/analytics/lendingClub/dailyChangeInLiquidity       controllers.Dashboard.lendingClubAnalyticsDailyChangeInLiquidity

# Play routes serving HTML to AngularJS start with /views
GET     /view/*any                                              controllers.Application.loadPublicHTML(any)
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                                           controllers.Assets.versioned(path="/public", file: Asset)
