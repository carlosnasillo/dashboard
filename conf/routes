# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                                                           controllers.Application.index

POST    /api/authenticate                                                           controllers.Login.authentication

GET     /api/analytics/lendingClub                                                  controllers.Analytics.lendingClubAnalytics

GET     /api/portfolio/analytics                                                    controllers.Portfolio.allPortfolioAnalytics
GET     /api/portfolio/currentBalance                                               controllers.Portfolio.totalCurrentBalance
GET     /api/portfolio/:originator/analytics                                        controllers.Portfolio.portfolioAnalytics(originator)
GET     /api/portfolio/:originator/analytics/notesAcquiredTodayByGrade              controllers.Portfolio.notesAcquiredTodayByGrade(originator)
GET     /api/portfolio/:originator/analytics/notesAcquiredTodayByYield              controllers.Portfolio.notesAcquiredTodayByYield(originator)
GET     /api/portfolio/:originator/analytics/notesAcquiredTodayByPurpose            controllers.Portfolio.notesAcquiredTodayByPurpose(originator)
GET     /api/portfolio/:originator/analytics/notesAcquiredThisYearByMonthByGrade    controllers.Portfolio.notesAcquiredThisYearByMonthByGrade(originator)
GET     /api/portfolio/:originator/analytics/notesAcquiredThisYearByMonthByYield    controllers.Portfolio.notesAcquiredThisYearByMonthByYield(originator)
GET     /api/portfolio/:originator/analytics/notesAcquiredThisYearByMonthByPurpose  controllers.Portfolio.notesAcquiredThisYearByMonthByPurpose(originator)
GET     /api/portfolio/:originator/currentBalance                                   controllers.Portfolio.currentBalance(originator)

GET     /api/loans                                                                  controllers.Loans.availableLoans
POST    /api/placeOrder                                                             controllers.Loans.submitOrder
GET     /api/ownedNotes/:investorId                                                 controllers.Loans.ownedNotes(investorId)

POST    /api/rfqs                                                                   controllers.Rfqs.submitRFQ
GET     /api/rfqs/:id                                                               controllers.Rfqs.getRFQById(id)
GET     /api/rfqs/dealer/:account                                                   controllers.Rfqs.getRFQWhenDealersContainsAccount(account)
GET     /api/rfqs/client/:account                                                   controllers.Rfqs.getRFQByClient(account)
GET     /api/rfqs/stream/dealer/:account                                            controllers.Rfqs.streamRfqToDealer(account)
GET     /api/rfqs/stream/client/:account                                            controllers.Rfqs.streamRfqToClient(account)

POST    /api/quotes                                                                 controllers.Quotes.submitQuote
GET     /api/quotes/client/:account                                                 controllers.Quotes.getQuoteByClientGroupByRfqId(account)
GET     /api/quotes/dealer/:account                                                 controllers.Quotes.getQuoteByDealerGroupByRfqId(account)
GET     /api/quotes/stream/client/:account                                          controllers.Quotes.streamQuotesToClient(account)
GET     /api/quotes/stream/dealer/:account                                          controllers.Quotes.streamQuotesToDealer(account)

POST    /api/trades                                                                 controllers.Trades.submitTrade
GET     /api/trades/:account                                                        controllers.Trades.getTradesByAccount(account)
GET     /api/trades/stream/:account                                                 controllers.Trades.streamTrades(account)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                                                               controllers.Assets.versioned(path="/public", file: Asset)
